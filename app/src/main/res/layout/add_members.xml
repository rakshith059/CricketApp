                    android:hint="@string/hint_player_name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/add_members_spinner_player8_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_player9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_player9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_player_name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/add_members_spinner_player9_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_city_name"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_contact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_contact_number"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email_id"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/add_members_tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/gradient_bg"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
