                android:id="@+id/add_members_til_player4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_player4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_player_name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/add_members_spinner_player4_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_player5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_player5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_player_name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/add_members_spinner_player5_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_members_til_player6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_members_et_player6"
                    android:layout_width="match_parent"
