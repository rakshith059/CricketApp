<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_blue"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_matches_cv_enter_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/size_5dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="@dimen/size_20dp">

        <TextView
            android:id="@+id/fragment_matches_tv_enter_matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/size_15dp"
            android:text="@string/create_matches"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <include layout="@layout/common_recycler_view" />

</LinearLayout>