<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/size_125dp"
            android:layout_height="@dimen/size_125dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:elevation="@dimen/size_10dp"
            app:cardCornerRadius="@dimen/size_30dp">

            <ImageView
                android:id="@+id/sponsor_row_item_iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_developer" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sponsor_row_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_5dp"
                android:text="@string/add_new_teams"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_20sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/sponsor_row_item_tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:padding="@dimen/size_5dp"
                android:text="@string/add_new_teams"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>