<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_2dp"
    android:backgroundTint="@color/purple"
    android:elevation="@dimen/size_5dp"
    app:cardCornerRadius="@dimen/size_5dp">

    <LinearLayout
        android:id="@+id/team_member_detail_item_ll_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5dp">

        <TextView
            android:id="@+id/team_member_detail_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/player_name"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20sp"
            android:textStyle="italic|bold" />

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/size_10dp"
            app:cardCornerRadius="@dimen/size_10dp">

            <ImageView
                android:id="@+id/team_member_detail_item_iv_role"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>