<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/matches_row_item_cv_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/size_5dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">

            <TextView
                android:id="@+id/matches_row_item_tv_match_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="@string/matches"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/matches_row_item_iv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/size_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_view" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/com_facebook_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100dp"
                    android:layout_weight="1"
                    android:background="@color/purple_1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/matches_row_item_tv_team_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/matches_row_item_tv_team_one_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_verses" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100dp"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/matches_row_item_tv_team_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/matches_row_item_tv_team_two_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v7.widget.CardView>