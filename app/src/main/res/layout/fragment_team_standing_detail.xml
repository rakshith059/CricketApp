<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_standing_detail_rl_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_ground" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_20dp"
        android:elevation="@dimen/size_20dp"
        app:cardBackgroundColor="@color/transparent_blue"
        app:cardCornerRadius="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_standing_detail_tv_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_40dp"
                android:gravity="center"
                android:padding="@dimen/size_10dp"
                android:text="@string/team_name"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_standing_detail_tv_matches_played"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:text="@string/total_matches_played"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_standing_detail_tv_matches_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:text="@string/total_matches_won"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_standing_detail_tv_matches_lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:text="@string/total_matches_lost"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total_runs_scored"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/team_standing_detail_tv_runs_scored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/team_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total_runs_gave"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/team_standing_detail_tv_runs_gave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/team_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total_wickets_lost"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/team_standing_detail_tv_wickets_lost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/team_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total_wickets_took"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/team_standing_detail_tv_wickets_took"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/team_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/total_team_value"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:id="@+id/team_standing_detail_iv_team_value_rules"
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_alignParentRight="true"
                        android:src="@android:drawable/ic_dialog_info" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/team_standing_detail_tv_team_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/team_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/fragment_team_standing_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_trophy" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>